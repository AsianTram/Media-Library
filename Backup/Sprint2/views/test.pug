        //-             .home-item
        //-                 img(src=bookArray[i]['imageLink'], alt="book")
        //-                 h1= bookArray[i]['title']
        //-     -}
            
    - bookArray.sort(function(a,b){ return (a.title > b.title)?1:((b.title > a.title)?-1:0);})
    
    each value in bookArray
        .home-item
            img(src=value.imageLink)
            h2 #{value.title}
   
    .books_buttonnext
        button.books_next Next
