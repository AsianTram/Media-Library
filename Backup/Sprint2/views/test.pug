extends layout.pug 
block content
    .books_search_tool
        .books_search
            input(type="text" placeholder="Search.." class="books_input")
        button(class="books_submit") Search
    .books_sort
        button('onclick'="myFunction()" class="books_dropbtn") Dropdown
        #books_myDropdown
            button('onclick'="sortName()") A to Z
            button('onclick'="myFunction()") Test
        //- .home-box
        //-     -for(var i = 0; i < 10; i++){
