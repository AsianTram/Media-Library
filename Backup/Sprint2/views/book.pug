extends layout.pug 
block content
    .books_search_tool
        .books_search
            input(type="text" placeholder="Search.." class="books_input")
        button(class="books_submit") Search
    .books_sort
        button('onclick'="myFunction()" class="books_dropbtn") Dropdown
        #books_myDropdown
            a(href="#AtoZ") From A to Z
            a(href="#") From Z to A
        .home-box
            -for(var i = 0; i < 10; i++){
                a(href='book/'+bookArray[i]['_id'])
                    .home-item
                        img(src=bookArray[i]['imageLink'], alt="book")
                        h1= bookArray[i]['title']
            -}
            
   
    .books_buttonnext
        button.books_next Next
